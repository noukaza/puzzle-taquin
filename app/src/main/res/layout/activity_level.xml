<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="upec.projetandroid2017_2018.Level">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:foregroundGravity="center"
        tools:ignore="MissingConstraints"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/txtLevel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:background="@drawable/button"
            android:text="Choose your level !!"
            android:textColor="#FFFFFF"
            android:textSize="25dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:layout_marginTop="60dp"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/level1"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="selectLevel"

                android:scaleType="centerInside"
                app:srcCompat="@drawable/level1" />

            <ImageButton
                android:id="@+id/level2"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"

                android:onClick="selectLevel"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/level2" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/level3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="selectLevel"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/level3" />

            <ImageButton
                android:id="@+id/level4"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="selectLevel"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/level4" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageButton
                android:id="@+id/level5"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_weight="1"
                android:onClick="selectLevel"
                android:scaleType="centerInside"
                app:srcCompat="@drawable/level5" />
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>
